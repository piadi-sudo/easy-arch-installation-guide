///make file sistem

mkfs.ext4 /dev/<partizione root | home> -> ext4


mkswap /dev/<p swap>
swapon /dev/<p swap>


//if efi
mkfs.fat -F 32 /dev/sda1 



///disk mounting

mount /dev/<p root> /mnt



//mirror

reflector --country IT --latest 5 --sort rate --save /etc/pacman.d/mirrorlist


//install the linux kernel

pacstrap -K /mnt base linux linux-firmware base-devel networkmanager vim


///chroot

//make fstaba

genfstab -U  /mnt >> /mnt/etc/fstab

cat /mnt/etc/fstab


//chroot

arch-chroot /mnt

//info zone
ln -sf /usr/share/zoneinfo/Europe/Rome /etc/localtime

hwclock --systohc


//localization | timezone

vim /etc/locale.gen

locale-gen

en_US.UTF-8
en_US.ISO-8859-1

//lengage
echo "LANG=en_US.UTF-8" > /etc/locale.conf


//hostname
echo "<hostname>" >> /etc/hostname


//// user | passwd

root pw/

passwd

//add a user

useradd -m -G wheel,users <user>
passwd <user>



//enable network at boot
systemctl enable NetworkManager


// boot loader install 

-efi- commnad
pacman -S efibootmgr

pacman -S grub man-db man-pages

grub-install --target=i386-pc /dev/<nome del ssd>

-efi-
grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=GRUB
-efi-


grub-mkconfig -o /boot/grub/grub.cfg

//finish
exit 

//unomount every thing
umount -R /mnt 

reboot


